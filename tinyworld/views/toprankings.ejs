  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="background-color:#428bca">
      <div class="container">
        <div class="navbar-header">
  
          <a class="navbar-brand" href="#" style="color:white; font-size: 40px;">tinyWorld</a>
        </div>
        <div class="navbar-collapse collapse">
          <form class="navbar-form navbar-right" role="form">
            <div class="form-group">
              <input type="text" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control">
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-success">Sign in</button>
            <button type="submit" class="btn btn-warning">Log Out</button>
          </div>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
      
    </div>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1>Top Rankings</h1>

        <table class="table table-striped">
          <tr>
            <td><strong>Name</strong></td>
            <td><strong>Category</strong></td>
            <td><strong>Popularity</strong></td>
          </tr>

          <% for(var i = 0; i < allusers.length; i++){ %>
          <tr>
            <td> <%= allusers[i].fname + ' ' + allusers[i].lname %> </td>
            <td> <%= allusers[i].hobbies[0] %> </td> 
            <td> <%= allusers[i].popularity %> </td>
          </tr>
          <% } %>

        </table>

      </div>
    </div>



</body></html>